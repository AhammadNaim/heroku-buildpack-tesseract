#!/bin/bash
BUILD_DIR=$1
TESSERACT_OCR_DATA_VERSION=3.04.00

TESSERACT_LEPT_TGZ=tesseract-leptonica.tar.gz

INSTALL_DIR=$BUILD_DIR/vendor/tesseract-lept/
INSTALL_DIR_TRAINING_DATA=$BUILD_DIR/vendor/
TESSERACT_LEPT_DIR=${HOME}/vendor/tesseract-lept
ENVSCRIPT=$BUILD_DIR/.profile.d/tesseract-lept.sh

TESSERACT_OCR_LANGUAGES=eng

echo "Cleaning up previous installation"
rm -f $TESSERACT_LEPT_DIR/**

echo "Unpacking Tesseract-OCR binaries"
mkdir -p $INSTALL_DIR
tar -zxvf $TESSERACT_LEPT_TGZ -C $INSTALL_DIR

echo 'Getting Tesseract-OCR training data'
if [ $TESSERACT_OCR_LANGUAGES ]
then
   array=(${TESSERACT_OCR_LANGUAGES//,/ })
   for i in "${!array[@]}"
   do
     lang="${array[i]}"
     echo $lang 'training data'
     curl -o $INSTALL_DIR_TRAINING_DATA/$lang.traineddata https://github.com/tesseract-ocr/tessdata/raw/$TESSERACT_OCR_DATA_VERSION/$lang.traineddata 
   done
fi

echo "Building runtime environment for Tesseract-OCR"
mkdir -p $BUILD_DIR/.profile.d
echo "export PATH=\"$TESSERACT_LEPT_DIR/bin:\$PATH\"" > $ENVSCRIPT
echo "export LD_LIBRARY_PATH=\"$TESSERACT_LEPT_DIR/lib:\$LD_LIBRARY_PATH\"" >> $ENVSCRIPT
echo "export TESSDATA_PREFIX=\"$INSTALL_DIR_TRAINING_DATA/\"" >> $ENVSCRIPT
